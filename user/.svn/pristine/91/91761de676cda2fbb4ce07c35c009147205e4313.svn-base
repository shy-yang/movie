<!DOCTYPE html>
<html lang="en" xmlns:th="http://www.thymeleaf.org">
<head>
    <base th:href="@{/}">
    <meta charset="utf-8">
    <meta name="viewport" content="width=1024">
    <title>个人中心</title>
    <link rel="stylesheet" href="css/reset.css">
    <link rel="stylesheet" href="css/index.css">
    <link rel="stylesheet" href="css/bootstrap4.3.1.min.css">
    <link rel="stylesheet" href="css/mycss.css">
    <link rel="stylesheet" href="layer/css/layui.css">
    <script src="js/jquery.min.js"></script>
    <script src="js/script.js"></script>
    <script src="js/vue2.6.10_min.js"></script>
    <script src="js/jqpaginator.js"></script>
    <script src="just_layer/layer.js"></script>
    <script src="layer/layui.js"></script>
    <style>
        .profileContainer {
            display: inline-block;
            margin-left: -5px;
            padding-left: 45px;
            width: 878px;
            min-height: 800px;
        }

        .profileButtons {
            display: inline-block;
            width: 200px;
            min-height: 805px;
            background-color: #f4f3f4;
            margin-bottom: -5px;
        }

        h1 {
            display: inline-block;
            float: left;
            margin-top: 40px;
            margin-bottom: 30px;
            text-align: center;
            font-size: 22px;
            font-weight: 400;
            width: 100%;
        }

        .profile {
            display: inline-block;
            float: left;
            font-weight: 400;
            color: #333;
            height: 40px;
            width: 100%;
            line-height: 40px;
            font-size: 18px;
            text-align: center;
        }

        .title0 {
            padding: 26px 0;
            color: #ec443f;
            font-size: 18px;
            border-bottom: 1px solid #e1e1e1;
            margin-bottom: 30px;
            float: left;
            width: 100%;
        }

        .img {
            width: 42%;
            float: left;
            margin-right: 8%;
        }

        .form_control {
            width: 30%;
            float: left;
            margin-right: 8%;
            height: 600px;
        }
    </style>
</head>
<body>
<div th:replace="~{common/header::header}"></div>
<div style="width: 100%;padding-top: 100px;"></div>
<div id="mainProfile" style="width: 80%; margin: 0 auto;border: 1px solid #e1e1e1;;">
    <div class="profileButtons">
        <h1>个人中心</h1>
        <div class="profile" style="background-color: #ed3931;color: white">基本信息</div>
        <a href="user/userOrder">
            <div class="profile">我的订单</div>
        </a>
    </div>
    <div class="profileContainer">
        <div class="title0">基本信息</div>
        <div class="img">
            <img width="280px" style="display:inline-block;float:left;margin-left: 50px" height="280px"
                 th:attr="src=${session.user.getUserHeadImage()}">
            <div class="form-group">
                <input type="file" placeholder="点击上传">
            </div>
        </div>
        <div class="form_control">
            <form class="layui-form" action="">
                <div class="layui-form-item">
                    <label class="layui-form-label">昵称</label>
                    <div class="layui-input-block">
                        <input type="text" name="nickName" required lay-verify="required" autocomplete="off"
                               class="layui-input" th:attr="value=${session.user.getUserNickname()}">
                    </div>
                </div>
                <div class="layui-form-item">
                    <label class="layui-form-label">电话</label>
                    <div class="layui-input-block">
                        <input type="text" name="phone" required lay-verify="required" autocomplete="off"
                               class="layui-input" th:attr="value=${session.user.getUserPhone()}">
                    </div>
                </div>
                <div class="layui-form-item">
                    <label class="layui-form-label">邮箱</label>
                    <div class="layui-input-block">
                        <input type="text" name="title" required lay-verify="required" autocomplete="off"
                               class="layui-input" th:attr="value=${session.user.getUserEmail()}">
                    </div>
                </div>

                <div class="layui-form-item" th:if="${session.user.getUserSex()=='男'}">
                    <label class="layui-form-label">性别</label>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
                    <input type="radio" name="sex" value="nan" checked="checked" title="男">
                    <input type="radio" name="sex" value="nv" title="女">
                </div>
                <div class="layui-form-item" th:if="${session.user.getUserSex()=='女'}">
                    <label class="layui-form-label">性别</label>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
                    <input type="radio" name="sex" value="nan" title="男">
                    <input type="radio" name="sex" value="nv" title="女" checked="checked">
                </div>

                <div class="layui-form-item layui-form-text">
                    <label class="layui-form-label">个性签名</label>
                    <div class="layui-input-block">
                        <textarea name="desc" style="resize: none;font-size: 18px;" cols="30" rows="7"
                                  placeholder="签名~" th:attr="value=${session.user.getUserDescription()}"></textarea>
                    </div>
                </div>
                <div class="layui-form-item">
                    <div class="layui-input-block">
                        <button class="btn btn-outline-danger">修改</button>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>
<div style="position:absolute;top: 1100px;width: 100%;">
    <div th:replace="~{common/footer::footer}"></div>
</div>
</body>
<script>
    var app = new Vue({
        el: "#mainProfile"

    })
    //Demo
    layui.use('form', function () {
        var form = layui.form;

        //监听提交
        form.on('submit(formDemo)', function (data) {
            layer.msg(JSON.stringify(data.field));
            return false;
        });
    });
</script>
</html>
